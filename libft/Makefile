		printf/fpf_str_conv.c \
		printf/fpf_unsigned_conv.c \
		printf/fpf_wildcard.c \

OBJ =	$(SRC:.c=.o)

all: $(NAME)

$(NAME):
	@$(CC) $(FLAGS) -c $(SRC)
	@ar rc $(NAME) $(OBJ)
	@ranlib $(NAME)

clean:
	rm -rf *.o ./printf/*.o

fclean: clean
	rm -f $(NAME)

re: fclean all

norme:
	@norminette */*[hc]

.PHONY: re norme fclean clean all
